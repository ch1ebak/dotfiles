# -- feeds ---------------------------------------------------------------------

auto-reload yes
reload-time 120
reload-threads 4
download-retries 4
download-timeout 10
history-limit 100
prepopulate-query-feeds yes


# -- display -------------------------------------------------------------------

show-read-feeds no
show-read-articles no
feed-sort-order unreadarticlecount-asc
text-width 80


# -- colors --------------------------------------------------------------------

color background color7 default
color info color7 color0 dim
color listnormal color7 default dim
color listfocus color3 default
color listnormal_unread color7 default
color listfocus_unread color1 default

# -- formatting ----------------------------------------------------------------

feedlist-format " %4i %n :: â€º %t %> unread %U/%c total "
feedlist-title-format " [%u unread] / [%t total] "
articlelist-format " %4i %n :: %t %> %D "
articlelist-title-format " %T ~ [%u unread] / [%t total] "


# -- navigation ----------------------------------------------------------------

goto-next-feed no

browser zen-browser

bind-key g home
bind-key G end
bind-key l open
bind-key h quit
bind-key k up feedlist
bind-key j down feedlist
bind-key k up article
bind-key j down article
bind-key k prev articlelist
bind-key j next articlelist
bind-key K prev-feed articlelist
bind-key J next-feed articlelist
